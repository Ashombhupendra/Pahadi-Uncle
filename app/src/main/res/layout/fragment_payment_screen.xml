<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.my_orders.paymentscreen.PaymentScreen">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_gradient_paymentscreen"
        android:layout_height="160dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:alpha="0.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/final_payment_price"
            app:layout_constraintBottom_toTopOf="@id/final_payment_price"
            android:text="Total Amount"
            android:textStyle="bold"
            android:alpha="0.3"
            android:elevation="10dp"
            android:textSize="18sp"
            android:textColor="@color/blue_dark"/>
        <TextView
            android:id="@+id/final_payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="25sp"
            android:text="$3000"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/second_item"
       android:layout_width="match_parent"
      app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:background="@drawable/profile_card_bg"
       android:elevation="10dp"
       android:layout_marginTop="130dp"
       android:layout_height="0dp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:nestedScrollingEnabled="true"
           android:layout_height="match_parent">
           <FrameLayout
               android:id="@+id/payment_address_container"
               android:layout_width="match_parent"
               android:layout_height="48dp"

               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginHorizontal="20dp"
               android:elevation="5dp"
               android:layout_marginTop="30dp"
               android:background="@drawable/bg_10_white">

               <Spinner
                   android:id="@+id/select_address"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:backgroundTint="@color/black"
                   android:inputType="number"
                   android:gravity="center_vertical"
                   android:textColor="@android:color/black"
                   android:textColorHint="@android:color/darker_gray" />
           </FrameLayout>

           <RadioGroup
               android:id="@+id/payment_radio_grp"
               android:layout_width="match_parent"
               android:layout_marginHorizontal="20dp"
               android:layout_marginVertical="20dp"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/payment_address_container"
               android:layout_centerInParent="true">
               <RadioButton
                   android:id="@+id/payment_cod_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:checked="true"
                   android:textColor="@color/blue_dark"
                   android:text="Cash on delivery(COD)" />

               <RadioButton
                   android:id="@+id/payment_payment_gateway"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/blue_dark"
                   android:text="Payment Gateway" />
           </RadioGroup>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/submit_payment"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/bg_10_white"
               android:layout_marginHorizontal="20dp"
               app:layout_constraintTop_toBottomOf="@id/payment_radio_grp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="20dp"
               android:elevation="10dp"
               android:textColor="@color/white"
               android:text="Pay"
               app:backgroundTint="@color/orange_dark"
               app:layout_dodgeInsetEdges="bottom" />
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>