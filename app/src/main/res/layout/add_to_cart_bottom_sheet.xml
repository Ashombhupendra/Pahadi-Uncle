<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/addtocart_product_img"
        android:src="@drawable/home_screen_banner"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/addtocart_dismiss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:elevation="5dp"
         />

    <TextView
        android:id="@+id/addtocart_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
       app:layout_constraintTop_toTopOf="@id/addtocart_product_img"
        app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
       app:layout_constraintEnd_toStartOf="@id/addtocart_dismiss"
        android:text="DSA Self Paced Course"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/addtocart_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/addtocart_product_name"
        app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="₹ 2000"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/addtocart_qty_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
        app:layout_constraintTop_toBottomOf="@id/addtocart_product_price"

        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/addtocart_product_quantity_deccrease"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@color/blue_dark"
            android:padding="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/addtocart_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/addtocart_product_quantity_increase"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+"
            android:gravity="center"
            android:background="@color/blue_dark"

            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/addtocart_final_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="₹2000 /-"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/addtocart_qty_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/idBtnDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addtocart_final_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_10_white"
        android:backgroundTint="@color/orange_dark"
        android:textColor="@color/white"
        android:text="Add To Cart"
        android:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>