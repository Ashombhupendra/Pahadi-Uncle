<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/bottom_sheet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Upload Photo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/bottom_sheet_camera"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:civ_border="false"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera_pro"
            />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Camera"
       android:textAlignment="center"
       android:textSize="15sp"
       android:layout_marginTop="5dp"
       android:textColor="@color/blue_dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@id/ll_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_title"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/bottom_sheet_gallery"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            app:civ_border="false"
            android:src="@drawable/gallery_pro"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue_dark"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>