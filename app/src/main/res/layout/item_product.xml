<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="com.pahadi.uncle.presentation.home.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    image_url="@{product.imageUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <ImageView
                    android:id="@+id/product_nofav"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:elevation="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="center"
                    android:src="@{product.wishlist  ? @drawable/fav : @drawable/un_fav}"
                    tools:ignore="MissingConstraints"
                    tools:src="@drawable/un_fav"
                    />

                <TextView
                    android:id="@+id/price"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{product.priceFormatted}"
                    android:textColor="@color/orange_dark"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="@id/title"
                    tools:text="At Rs. 50,000" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{product.title}"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menu_iv"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="alskdf jalskdjf sjd skdjfk sjlsdkfj  sjlskjd ks djlskdjfk jslk jlsdkjfks jldkf jlsj lskdj lk" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:text="@{product.description}"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/price"
                    app:layout_constraintBottom_toTopOf="@id/stock"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="alskdf jalskdjf sjd skdjfk sjlsdkfj  sjlskjd ks djlskdjfk jslk jlsdkjfks jldkf jlsj lskdj lk" />

                <TextView
                    android:id="@+id/stock"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_outline_10_black"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/out_of_stock"
                    android:textColor="@color/orange_dark"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    tools:visibility="gone" />

                <LinearLayout
                    android:id="@+id/rating_detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/item_freelancer_rating"
                        android:layout_width="81dp"
                        android:layout_height="24dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="@{product.ratings}"
                        android:stepSize="0.5"
                        style="@android:style/Widget.Material.RatingBar.Small"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="0dp"
                        android:progressBackgroundTint="@color/star_background"
                        android:progressTint="@color/golden"
                        android:secondaryProgressTint="@color/golden"
                        />

                    <TextView
                        android:id="@+id/product_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        />

                </LinearLayout>
                   <ImageView
                    android:id="@+id/menu_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_menu"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintEnd_toEndOf="@+id/image"
                    app:layout_constraintTop_toTopOf="@+id/title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/featured_tv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_orange_dark"
            android:elevation="1dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="@string/featured"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="@{product.featured ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/orange_diamond"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:background="#DA7A0F"
            android:elevation="0dp"
            android:rotation="30"
            android:visibility="@{product.featured ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/featured_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/white_cover_for_half_diamond"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/featured_tv"
            app:layout_constraintEnd_toEndOf="@id/featured_tv"
            app:layout_constraintStart_toStartOf="@id/featured_tv" />
        <TextView
            android:id="@+id/out_of_stock_tv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/orange_dark"
            android:elevation="1dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="Out Of Stock"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="@{product.outOfStock ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_tv"
            />
        <View
            android:id="@+id/out_of_stock_diamond"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:background="@color/orange_dark"
            android:elevation="0dp"
            android:rotation="30"
            android:visibility="@{product.outOfStock ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/out_of_stock_tv"
            app:layout_constraintEnd_toEndOf="parent" />
        <View
            android:id="@+id/white_cover_for_out_of_stock"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/out_of_stock_tv"
            app:layout_constraintEnd_toEndOf="@id/out_of_stock_tv"
            app:layout_constraintStart_toStartOf="@id/out_of_stock_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
