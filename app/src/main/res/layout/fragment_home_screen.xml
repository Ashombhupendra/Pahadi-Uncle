<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="frag"
            type="com.pahadi.uncle.presentation.home.HomeScreenFragment" />

        <variable
            name="viewModel"
            type="com.pahadi.uncle.presentation.home.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".presentation.home.HomeScreenFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <include
                    android:id="@+id/included_header"
                    layout="@layout/home_screen_header"
                    app:layout_collapseMode="parallax" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_product"
            tools:spanCount="2" />

        <ProgressBar
            android:id="@+id/pBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:progressTint="@color/orange"
            android:secondaryProgressTint="@color/orange_dark"
            />
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wall_share"
                    android:layout_width="@dimen/app_bar_icon_size"
                    android:layout_height="@dimen/app_bar_icon_size"
                    android:layout_weight="1"
                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_home_icon" />

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/app_bar_icon_size"
                    android:layout_height="@dimen/app_bar_icon_size"
                    android:layout_marginEnd="@dimen/app_bar_icon_middle_gap"
                    android:layout_weight="1"
                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_setting_icon" />
<RelativeLayout
    android:layout_width="20dp"
    android:layout_weight="1"
    android:visibility="gone"
    android:layout_height="20dp">
    <ImageView
        android:id="@+id/chat"
        android:layout_width="@dimen/app_bar_icon_size"
        android:layout_height="@dimen/app_bar_icon_size"
        android:layout_marginStart="@dimen/app_bar_icon_middle_gap"
        android:background="@drawable/ic_ripple"
        android:src="@drawable/ic_chat_icon" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/chatalert"
        android:layout_alignEnd="@id/chat"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/h_alert_notification"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>


                <ImageView
                    android:id="@+id/account"
                    android:layout_width="@dimen/app_bar_icon_size"
                    android:layout_height="@dimen/app_bar_icon_size"
                    android:layout_weight="1"
                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_account_icon" />


            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{frag::onFABClicked}"
            android:src="@drawable/ic_baseline_add_24"
            android:transitionName="circular_reveal"
            android:visibility="gone"
            app:layout_anchor="@id/bottom_app_bar" />
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|center_horizontal"
            app:cardBackgroundColor="@color/transparent"

            app:cardElevation="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Post"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </androidx.cardview.widget.CardView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
