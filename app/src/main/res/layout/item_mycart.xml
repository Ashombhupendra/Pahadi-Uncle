<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="cartDTO"
            type="com.pahadi.uncle.network.data.MyCartDTO" />
    </data>
<androidx.cardview.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

        android:background="@drawable/bottom_sheet_background"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/addtocart_product_img"
            android:src="@drawable/home_screen_banner"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="0dp"
            image_url="@{cartDTO.thumb_image}"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/addtocart_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:elevation="5dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/addtocart_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/addtocart_product_img"
            app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
            app:layout_constraintEnd_toStartOf="@id/addtocart_delete"
            android:text="@{cartDTO.product_name}"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/addtocart_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/addtocart_product_name"
            app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{cartDTO.price}"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/addtocart_qty_container"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/addtocart_product_img"
            app:layout_constraintTop_toBottomOf="@id/addtocart_product_price"

            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/addtocart_product_quantity_deccrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:background="@color/blue_dark"
                android:padding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/addtocart_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{cartDTO.quantity}"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/addtocart_product_quantity_increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:gravity="center"
                android:background="@color/blue_dark"

                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/addtocart_final_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="â‚¹2000 /-"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/addtocart_qty_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>