<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="agentCode"
            type="java.lang.String" />
        <variable
            name="agentaName"
            type="java.lang.String" />

        <variable
            name="agentCounts"
            type="com.pahadi.uncle.network.data.AgentCounts" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/orange_dark"
           app:layout_constraintTop_toTopOf="parent"
            app:trackColor="@android:color/white"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/agent_code_tv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/agent_code(agentCode)}"
            android:textColor="@color/orange_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_indicator"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
           <TextView
               android:id="@+id/agent_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@{@string/agent_name(agentaName)}"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="5dp"
               android:textColor="@color/orange_dark"
               android:layout_marginBottom="5dp"
               app:layout_constraintTop_toBottomOf="@id/agent_code_tv"
               tools:layout_editor_absoluteX="16dp"
               tools:layout_editor_absoluteY="16dp"
               />
        <LinearLayout
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_10_white"
            android:backgroundTint="@color/orange_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/today_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agent_name">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{agentCounts.users}"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/today_register"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_10_white"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{agentCounts.todayRegistered}"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_register"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/points"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_10_white"
            android:backgroundTint="@android:color/holo_green_light"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_register">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{agentCounts.points}"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textColor="#fff" />
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/agent_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_notifications_24"
            android:tint="@color/blue_dark"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>