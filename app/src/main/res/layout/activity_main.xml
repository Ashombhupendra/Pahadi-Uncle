<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="frag"
            type="com.pahadi.uncle.presentation.MainActivity" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".presentation.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MaterialComponents.Toolbar.Surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/blue_dark" >

                <FrameLayout
                    android:id="@+id/toolbar_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:layout_marginEnd="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="-16dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/png"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:elevation="0dp"
                            android:src="@mipmap/pahadi_new_logo"
                            android:background="@color/white"
                            app:layout_constraintHorizontal_bias="0.767"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints"
                            />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="150dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"

                            android:paddingVertical="15dp"
                            android:src="@drawable/name_logo"
                            app:layout_constraintStart_toEndOf="@id/png"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/agent_login"
                            android:text="Agent Login"
                            android:visibility="invisible"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_gravity="center_vertical"
                            tools:ignore="MissingConstraints" />
                        <ImageView
                            android:id="@+id/h_shopping_cart"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/shopping_cart"
                            app:layout_constraintEnd_toStartOf="@id/h_notification"
                            android:visibility="visible"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/blue_dark" />
                        <ImageView
                            android:id="@+id/h_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_notifications_24"
                            app:layout_constraintEnd_toStartOf="@id/ic_fav"
                            android:visibility="visible"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_gravity="center_vertical"
                            />
                        <ImageView
                            android:id="@+id/h_alert_notification"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:visibility="invisible"
                            app:layout_constraintTop_toTopOf="@id/h_notification"
                            app:layout_constraintEnd_toEndOf="@id/h_notification"
                            android:layout_marginEnd="2dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_baseline_brightness_1_24"
                            tools:ignore="MissingConstraints" />
                        <ImageView
                            android:id="@+id/ic_fav"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@drawable/ic_baseline_favorite_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints"
                            app:tint="@color/blue_dark" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:defaultNavHost="true"

            app:navGraph="@navigation/main_nav_graph" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/home_bottom_app_bar"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_wall_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_home_icon" />

                <ImageView
                    android:id="@+id/home_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/app_bar_icon_middle_gap"
                    android:layout_weight="1"

                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_setting_icon" />
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp">
                    <ImageView
                        android:id="@+id/home_chat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/app_bar_icon_middle_gap"
                        android:background="@drawable/ic_ripple"
                        android:src="@drawable/ic_chat_icon" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/home_chatalert"
                        android:layout_alignEnd="@id/home_chat"

                        app:cardBackgroundColor="@color/transparent"
                        app:cardElevation="0dp"

                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/bottom_h_alert_notification"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_brightness_1_24"
                            tools:ignore="MissingConstraints" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/home_account"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_ripple"
                    android:src="@drawable/ic_account_icon" />


            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floating_btn"
            android:src="@drawable/ic_baseline_add_24"


            app:layout_anchor="@id/home_bottom_app_bar" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|center_horizontal"
            app:cardBackgroundColor="@color/transparent"

            app:cardElevation="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Post"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </androidx.cardview.widget.CardView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>