<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/bg_10_white"
    android:backgroundTint="@color/white"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_address_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name"
        android:textColor="@color/blue_dark"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/item_address_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_address_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="9111-564-000"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/item_address_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_address_phone"
        app:layout_constraintStart_toStartOf="parent"
        android:text="34,GPO Square, Indore"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        />


    <ImageView
        android:id="@+id/item_address_delete"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/blue_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>