<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
      <variable
          name="frag"
          type="com.pahadi.uncle.presentation.rating.RateProduct" />
  </data>
    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        tools:context=".presentation.rating.RateProduct">
        <TextView
            android:id="@+id/rate_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Product"
            android:textSize="18sp"
            android:paddingVertical="10dp"
            android:background="@color/blue_dark"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="0dp"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/rate_product_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rating_bg"
            android:layout_marginVertical="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rate_product_title"

            />

        <RatingBar
            android:id="@+id/rate_product_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/rate_product_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:numStars="5"
            android:progressBackgroundTint="@color/grey"
            android:progressTint="@color/blue_dark"
            android:secondaryProgressTint="@color/blue_dark"
            android:layout_marginVertical="25dp"/>

        <TextView
            android:id="@+id/no_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rate_product_bar"
            android:text="Please firstly rate... "
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:visibility="gone"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="30dp"
            android:textColor="#C40F0F"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_error_outline_24"/>
        <EditText
            android:id="@+id/rate_product_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/no_rate"
            android:layout_marginVertical="10dp"
            android:hint="Add Review"
            android:textSize="18sp"
            android:maxLength="100"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:padding="10dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/rating_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rate_product_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="SUBMIT RATING"
            android:background="@drawable/bg_10_white"
            android:backgroundTint="@color/blue_dark"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:onClick="@{()->frag.submitrate()}"
            android:layout_marginBottom="35dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"/>
        <ImageView
            android:id="@+id/rating_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/rate_product_title"
            app:layout_constraintBottom_toBottomOf="@id/rate_product_title"
             app:layout_constraintEnd_toEndOf="@id/rate_product_title"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/img_cancel"
            android:backgroundTint="@color/white"

             />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>