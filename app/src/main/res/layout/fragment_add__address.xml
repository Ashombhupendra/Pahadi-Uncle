<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.pahadi.uncle.presentation.my_orders.OrderViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.my_add_address.Add_Address">

    <!-- android:text="@={viewModel.productName}"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_address_toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:padding="10dp"
        android:elevation="6dp"
        android:layout_height="?android:attr/actionBarSize">
          <ImageView
              android:id="@+id/back_add"
              android:layout_width="50dp"
              android:layout_height="match_parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:padding="5dp"
              android:src="@drawable/ic_baseline_keyboard_backspace_24"
              app:tint="@color/blue_dark" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/back_add"
            app:layout_constraintEnd_toStartOf="@id/add_address_toggle"
            android:text="Add Address"
            android:textSize="18sp"
            android:textColor="@color/blue_dark"
            android:gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/add_address_toggle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            app:tint="@color/blue_dark"
            android:src="@drawable/add"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/add_address_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_address_container"
                android:layout_width="match_parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/add_address_username"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Full Name"
                    android:text="@={viewmodel.afullname}"
                    android:elevation="5dp"
                    android:inputType="textCapSentences"
                    android:padding="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_mobile_number"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Mobile number"
                    android:text="@={viewmodel.aphone}"
                    android:elevation="5dp"
                    android:inputType="number"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_username"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_pincode"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:hint="Pincode"
                    android:text="@={viewmodel.apincode}"
                    android:maxLength="6"
                    android:inputType="number"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_mobile_number"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_flat_no"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Flat, House No.,Building,Company,Apartment"
                    android:inputType="textCapSentences"
                    android:text="@={viewmodel.ahouseNumber}"
                    android:padding="15dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_pincode"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_area_street"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Area,Street,Sector,Village"
                    android:inputType="textCapSentences"
                    android:text="@={viewmodel.aarea}"
                    android:padding="15dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_flat_no"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_landmark"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Landmark"
                    android:text="@={viewmodel.alandmark}"
                    android:inputType="textCapSentences"
                    android:padding="15dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_area_street"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_area_towncity"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:capitalize="sentences"
                    android:hint="Town / City"
                    android:text="@={viewmodel.acity}"
                    android:inputType="textCapSentences"
                    android:padding="15dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_landmark"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/add_address_state"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="Car,Bike"
                    android:background="@drawable/bg_10_white"
                    android:elevation="5dp"
                    android:capitalize="sentences"
                    android:hint="State"
                    android:text="@={viewmodel.astate}"
                    android:inputType="textCapSentences"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_area_towncity"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_10_white"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/add_address_state"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:elevation="10dp"
                    android:textColor="@color/white"
                    android:text="Add Address"
                    app:backgroundTint="@color/orange_dark"
                    app:layout_dodgeInsetEdges="bottom" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addlist_rv"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/add_address_container"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_address_list"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>