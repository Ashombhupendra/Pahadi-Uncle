<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="white_bg_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_10_white</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="white_bg_et.contact_us" parent="white_bg_et">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="button_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/bg_10_white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="error_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="error_tv.contact_us" parent="error_tv">
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="rounded_corners">
        <item name="cornerSize">9%</item>
    </style>


    <style name="dialog_background">

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/float_transparent</item>
        <item name="android:backgroundTint">@color/float_transparent</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="android:layout_marginLeft">5dp </item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:elevation">20dp</item>
            <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>

    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>



</resources>